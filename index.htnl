    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.3/dist/confetti.browser.min.js"></script>
    <script>
        // JavaScript ‡¶ï‡ßã‡¶° ‡¶∂‡ßÅ‡¶∞‡ßÅ
        document.addEventListener('DOMContentLoaded', () => {
            const revealBtn = document.getElementById('reveal-button');
            const curtainWrapper = document.getElementById('curtain-wrapper');
            const mainContent = document.getElementById('main-content');
            const body = document.querySelector('body');

            revealBtn.addEventListener('click', () => {
                // Open the curtains
                curtainWrapper.classList.add('open');
                
                // Trigger confetti blast when curtains open
                confetti({
                    particleCount: 150,
                    spread: 180,
                    origin: { y: 0.6 }
                });

                // After curtain animation is done
                setTimeout(() => {
                    curtainWrapper.style.display = 'none'; // Hide curtains
                    body.style.overflow = 'auto'; // Allow scrolling
                    mainContent.classList.add('visible'); // Show main content

                    // Reveal gallery items one by one
                    const galleryItems = document.querySelectorAll('.gallery-item');
                    galleryItems.forEach((item, index) => {
                        setTimeout(() => {
                            item.classList.add('revealed');
                        }, index * 200); // 200ms delay between each item
                    });
                }, 1500); // This delay must match the CSS transition duration of the curtain
            });
        });
    </script>

