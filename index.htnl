    <style>
        /* CSS ‡¶ï‡ßã‡¶° ‡¶∂‡ßÅ‡¶∞‡ßÅ */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Hind Siliguri', sans-serif;
            background: #000;
            overflow: hidden; /* Prevent scrolling during curtain animation */
        }

        /* Video Background */
        #video-background {
            position: fixed;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            z-index: -100;
            transform: translateX(-50%) translateY(-50%);
            object-fit: cover;
        }

        #video-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.65);
            z-index: -99;
        }

        /* Curtain Animation */
        #curtain-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1000;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .curtain {
            position: absolute;
            top: 0;
            width: 50%;
            height: 100%;
            background-color: #1a001a;
            transition: transform 1.5s cubic-bezier(0.86, 0, 0.07, 1);
        }

        #curtain-left {
            left: 0;
        }

        #curtain-right {
            right: 0;
        }

        #curtain-wrapper.open #curtain-left {
            transform: translateX(-100%);
        }

        #curtain-wrapper.open #curtain-right {
            transform: translateX(100%);
        }
        
        #reveal-button {
            z-index: 1001;
            padding: 18px 35px;
            font-size: 1.5em;
            font-family: 'Baloo Da 2', cursive;
            font-weight: 700;
            cursor: pointer;
            border: 2px solid #fff;
            border-radius: 50px;
            background: transparent;
            color: #fff;
            transition: all 0.5s ease;
            opacity: 1;
        }

        #curtain-wrapper.open #reveal-button {
            opacity: 0;
            transform: scale(0.5);
            pointer-events: none;
        }

        #reveal-button:hover {
            background: #fff;
            color: #1a001a;
            transform: scale(1.1);
        }

        /* Main Content Styling */
        .main-content {
            display: none;
            opacity: 0;
            transition: opacity 1.5s ease-in-out 1s; /* Fade in after curtains open */
            padding: 40px 20px;
            max-width: 900px;
            margin: auto;
            overflow-y: auto;
            height: 100vh;
            text-align: center;
            color: #fff;
        }

        .main-content.visible {
            display: block;
            opacity: 1;
        }

        .main-message h2 {
            font-family: 'Baloo Da 2', cursive;
            font-size: 4.5em;
            font-weight: 700;
            background: linear-gradient(45deg, #ff9a9e, #fecfef, #ffdde1);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            animation: fadeInDown 1s ease-out 1.5s backwards;
        }

        .custom-text {
            font-size: 1.4em;
            line-height: 1.8;
            margin-top: 15px;
            animation: fadeInUp 1s ease-out 2s backwards;
        }
        
        /* Gallery with Animation */
        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-top: 40px;
        }

        .gallery-item {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.4);
            opacity: 0; /* Initially hidden for animation */
            transform: translateY(30px);
        }

        .gallery-item.revealed {
            animation: fadeInUp 0.8s ease-out forwards;
        }

        .gallery-item img {
            width: 100%;
            display: block;
            transition: transform 0.4s ease;
        }
        
        .gallery-item:hover img {
            transform: scale(1.1);
        }

        .signature {
            font-family: 'Baloo Da 2', cursive;
            font-size: 2em;
            margin-top: 60px;
            padding-bottom: 40px;
            color: #fecfef;
            animation: fadeInUp 1s ease-out 3s backwards;
        }

        @keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        @media (max-width: 768px) {
            .main-message h2 { font-size: 3em; }
            .custom-text { font-size: 1.1em; }
            #reveal-button { font-size: 1.2em; padding: 15px 30px; }
        }

    </style>
